2,"title":"内容概述","slug":"内容概述","link":"#内容概述","children":[]},{"level":2,"title":"核心观点","slug":"核心观点","link":"#核心观点","children":[]},{"level":2,"title":"重点段落","slug":"重点段落","link":"#重点段落","children":[{"level":3,"title":"DPOP算法的痛点解决","slug":"dpop算法的痛点解决","link":"#dpop算法的痛点解决","children":[]},{"level":3,"title":"正则化系数的应用","slug":"正则化系数的应用","link":"#正则化系数的应用","children":[]},{"level":3,"title":"策略模型的拟合","slug":"策略模型的拟合","link":"#策略模型的拟合","children":[]}]},{"level":2,"title":"操作步骤","slug":"操作步骤","link":"#操作步骤","children":[]},{"level":2,"title":"常见错误","slug":"常见错误","link":"#常见错误","children":[]},{"level":2,"title":"💡启发点","slug":"💡启发点","link":"#💡启发点","children":[]},{"level":2,"title":"行动清单","slug":"行动清单","link":"#行动清单","children":[]}]}}
